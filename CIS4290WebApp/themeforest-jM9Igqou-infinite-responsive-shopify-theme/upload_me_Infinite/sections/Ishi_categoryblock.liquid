<div id="ishicategoryblock" class="clearfix ">
    {% assign i = 1 %}
    {% if section.blocks.size > 0 %}
		<div id="ishicategoryblock-carousel" class="ishicategoryblock-carousel-{{ section.id }} owl-carousel slider-with-options owl-theme"
             data-small="2" 
             data-mobile="2" 
             data-tablet="3" 
             data-laptop="4"  
             data-desktop="4"
             data-autoplay="false"
             data-margin="30"
             data-rmargin="10"
             data-nav="true"
             data-dots="false"
             data-loop="true">
			{% for block in section.blocks %}
				<div id="ishicategoryblock_{{ i }}" class="ishicategoryblock-container item">
          <div class="ishicategoryblock-container">
              <a href="{% if block.settings.button_link != blank %}{{ block.settings.button_link }}{% else %}/{% endif %}">
                <div class="image-container">

                  {% if block.settings.image != blank %}
                  <img 
                       class="lazy owl-lazy"
                       data-src="{{ block.settings.image | img_url: '457x400' }}"
                       data-widths="[457]"
                       data-sizes="auto"
                       alt="{{ linklists[category_linklist].title }}">
                  {% else %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }} 
                  {% endif %}   
                </div>
                <div class="menu-container">
                  <div class="heading"><span> {{ block.settings.category-title }}</span></div>
                </div>
              </a>
          </div>
					{% assign i = i | plus: 1 %}  
				</div>
			{% endfor %}
		</div>
    {% endif %}
</div>

<style type="text/css">
  .ishi-category-block {
    margin-bottom: {{ section.settings.section_bottom_spacing_desktop }}px;
  }
  @media (max-width: 767px) {
    .ishi-category-block {
      margin-bottom: {{ section.settings.section_bottom_spacing_mobile }}px;
    }
  }
</style>


{% schema %}
  {
    "name": "Ishi Category Block",
    "class": "ishi-category-block",
    "settings": [
      {
        "type": "header",
        "content": "Section Bottom Spacing"
      },
      {
        "type": "range",
        "id": "section_bottom_spacing_desktop",
        "label": "Desktop",
        "min": 0,
        "max": 70,
        "step": 10,
        "default": 70
      },
      {
        "type": "range",
        "id": "section_bottom_spacing_mobile",
        "label": "Mobile",
        "min": 0,
        "max": 50,
        "step": 10,
        "default": 30
      }
    ],
    
    "blocks": [
      { 
        "type": "image",
        "name": "Category",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "Size:457px X 400px"
          },
          {
            "type": "text",
            "id": "category-title",
            "label": "Title",
            "default": "category-title"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Ishi Category Block",
        "category": "ishi themes"
      }
    ]
  }
{% endschema %}