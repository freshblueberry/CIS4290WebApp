<div id="ishiservices">
  {% if section.blocks.size > 0 %}
    <div class="ishiservices-content {% if section.settings.service_layout == 'box' %}page-width{% endif %}">
      <div class="service-block" id="services-{{ section.id }}">
          {% for block in section.blocks %} 
              <div class="services col-md-3 col-sm-6 col-xs-6">
                {% if block.settings.link != blank %}
                  <a href="{{ block.settings.link }}">
                {% endif %}
                <div class="service-img-outer">
                  <div class="service-img">
                    {% if block.settings.service-image != blank %}
                      {{ block.settings.service-image | img_tag: block.settings.service-image.alt}}
                    {% endif %}
                  </div>
                </div>
                  <div class="service-text">
                  {% if block.settings.service-title != blank %}
                    <div class="service-title">{{ block.settings.service-title | escape }}</div>
                    {% endif %}
                    {% if block.settings.service-desc != blank %}
                     <div class="service-desc">{{ block.settings.service-desc | escape }}</div>
                     {% endif %}
                  </div> 
                {% if block.settings.link != blank %}
                  </a>
                {% endif %}
              </div>
          {% endfor %}
      </div>
    </div>
  {% endif %}
  {% if section.blocks.size == 0 %}
    <div class="placeholder-noblocks">
      {{ 'homepage.onboarding.no_content' | t }}
    </div>
  {% endif %}
</div>
 

<style type="text/css">
  .ishi-service-block {
    margin-bottom: {{ section.settings.section_bottom_spacing_desktop }}px;
  }
  @media (max-width: 767px) {
    .ishi-service-block {
      margin-bottom: {{ section.settings.section_bottom_spacing_mobile }}px;
    }
  }
</style>

{% schema %}
  {
	"name": "Ishi Services Block",
    "class": "ishi-service-block",
    "max_blocks": 4,
    "settings": [
     {
        "type": "select",
        "id": "service_layout",
        "label": "Layout",
        "default": "box",
        "options": [
          { "value": "box", "label": "Box"},
          { "value": "full", "label": "Full"}
        ]
      },
      {
        "type": "header",
        "content": "Section Bottom Spacing"
      },
      {
        "type": "range",
        "id": "section_bottom_spacing_desktop",
        "label": "Desktop",
        "min": 0,
        "max": 70,
        "step": 10,
        "default": 70
      },
      {
        "type": "range",
        "id": "section_bottom_spacing_mobile",
        "label": "Mobile",
        "min": 0,
        "max": 50,
        "step": 10,
        "default": 30
      }
    ],
    
    "blocks": [
      { 
        "type": "image",
        "name": "Service",
        "settings": [
          {
            "type": "image_picker",
            "id": "service-image",
            "label": "Image",
            "info": "Size: 50px X 50px"
          },
          {
            "type": "text",
            "id": "service-title",
            "label": "Heading",
            "default": "SERVICE TITLE"
          },
          {
            "type": "text",
            "id": "service-desc",
            "label": "Sub Title",
            "default": "Lorem Ipsum is simply dummy"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link" 
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Ishi Service Block",
        "category": "ishi themes"
      }
    ]
  }
{% endschema %}