<div class="search-title clearfix " data-target="#search-container-full" data-toggle="collapse" aria-expanded="false" role="search">
  <span class="search-toggle hidden-lg-down">{% include 'icons' with 'magnifying-desktop' %}</span>
  <span class="search-toggle hidden-lg-up">{% include 'icons' with 'magnifying-mobile' %}</span>
</div>
<div  id="search-container-full" class="search-info collapse">
    <form action="/search" method="get" class="search-header search search--focus" role="search">
       <input type="hidden" name="type" value="product">
       <span class="search-tag"> {{ 'general.search.products' | t }} </span>
      <input class="search-header__input search__input"
        type="search"
        name="q"
        placeholder="{{ 'general.search.placeholder' | t }}"
        aria-label="{{ 'general.search.placeholder' | t }}">
      <button class="search-header__submit search__submit btn--link" type="submit">
        <span class="search-logo"> <i class="material-icons"></i> </span>
        <span class="icon__fallback-text">{{ 'general.search.button-text' | t }}</span>
      </button>
    </form>
  </div>